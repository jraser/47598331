
<div class="portlet-body">
    <div class="table-responsive">
        <div class="col-md-12 portlet-body  ">
            <div class="modal-header">
                <h3 class="modal-title">Búsqueda de Productos</h3>
            </div>
            <div class="modal-body">
                <form role="form">
                    <div class="form-group">
                        <label class="control-label">Marca</label>
                        <select ng-model="parameters.ID_Marca" class="form-control"
                                data-ng-options="a.ID_Marca as a.Descripcion for a in MarcaList" id="New.ID_Marca"></select>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Categoria</label>
                        <select ng-model="parameters.ID_Categoria" class="form-control" ng-change="XSelectSubCategoria()"
                                data-ng-options="a.ID_Categoria as a.Nombre for a in CategoriaList"></select>
                    </div>
                    <div class="form-group">
                        <label class="control-label">SubCategoria</label>
                        <select ng-model="parameters.ID_SubCategoria" class="form-control"
                                data-ng-options="a.ID_SubCategoria as a.Nombre for a in SubCategoriaList"></select>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Descripción</label>
                        <input type="text" class="form-control input-medium" placeholder=""
                               ng-model="parameters.Descripcion_Producto">
                    </div>
                    <div>
                        <button type="submit" class="btn green" ng-click="List()">Buscar</button>
                        <button type="submit" class="btn green" ng-click="List()">Limpiar</button>
                    </div>
                </form>
            </div>
            <table class="table <!--table-striped--> table-bordered table-advance table-hover">
                <thead>
                    <tr>
                        <th>
                            Código
                        </th>
                        <th>
                            Descripción
                        </th>
                        <th>
                            Marca
                        </th>
                        <th>
                            Categoria
                        </th>
                        <th>
                            SubCategoria
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="item in DetalleGrupoProductoAddList">
                        <td>{{item.Codigo_Producto}}</td>
                        <td>{{item.Descripcion_Producto}}</td>
                        <td>{{item.Marca}}</td>
                        <td>{{item.Categoria}}</td>
                        <td>{{item.SubCategoria}}</td>
                        <td align="center">
                            <input type="checkbox"
                                   ng-model="item.checked">
                        </td>
                    </tr>
                </tbody>
            </table>








            <div class="modal-footer">
                <button class="btn btn-primary" ng-click="ok()">Aceptar</button>
                <button class="btn btn-warning" ng-click="Cancel()">Cancelar</button>
            </div>
        </div>





    </div>
</div>

