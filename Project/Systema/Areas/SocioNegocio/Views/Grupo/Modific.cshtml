



<div>




    <div class="portlet box blue-dark ">
        <div class="portlet-title">
            <div class="caption">
                <i class="fa fa-gift"></i>

                Grupo de Descuento
            </div>
            <div class="tools">
                <a href="" class="collapse">
                </a>

                <a href="" class="reload">
                </a>

            </div>

        </div>
        <div class="portlet-body form">
            <form class="form-horizontal" role="form" id="FormMovbco" name="FormGrupo">
                <div class="form-body">
                    <input type="text" class="form-control text-right" ng-model="New.ID_Grupo" disabled style="visibility:hidden">
                    <div class="form-group" ng-show="true">
                        <label class="col-md-3 control-label">Nombre</label>
                        <div class="col-md-9">
                            <input type="text" oninput="validacion('New.Nombre')" ng-required="true" id="New.Nombre" class="form-control input-inline input-medium"
                                   ng-model="New.Nombre">

                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-3"> Tipo de Descuento</label>
                        <div class="col-md-9">
                            <select ng-model="New.TipoGrupo" class="form-control"
                                    data-ng-options="a.Codigo as a.Descripcion for a in FormaList" disabled></select>
                        </div>
                    </div>



                </div>


                <div class="form-actions">
                    <div class="row">
                        <div class="col-md-offset-3 col-md-9">
                            <button type="submit" class="btn blue-dark" ng-click="SaveNew()">Grabar</button>
                            <button type="button" class="btn default" ng-click="Cancel()">Cancelar</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <div class="portlet box blue-dark">
        <div class="portlet-title">
            <div class="caption">
                <i class="fa fa-gift"></i>Descuentos

            </div>
            <div class="tools">

                <a href="" class="collapse">
                </a>

                <a href="" class="reload">
                </a>

            </div>
            <div class="actions">
                <a href="#" class="btn btn-default btn-sm" ng-click="addItem()">
                    <i class="fa fa-plus"></i> Agregar
                </a>
            </div>
        </div>


        <div class="portlet-body ">

            <div class="portlet-body">
                <div class="table-responsive">
                    <table class="table <!--table-striped--> table-bordered table-advance table-hover">
                        <thead>
                            <tr>

                                <th>
                                    Descripcion
                                </th>
                                <th>Descuento %</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr ng-repeat="item in DescuentoGrupoList">



                                <td>
                                    {{item.Descripcion}}
                                </td>
                                <td>{{item.DescuentoPor}}</td>
                                <td align="center">
                                    <input type="radio"
                                           ng-click="Select(item)"
                                           ng-checked="item.checked">
                                </td>

                            </tr>

                        </tbody>
                    </table>
                </div>
            </div>


        </div>



    </div>


</div>


<script>
    function validacion(id) {
        var elem = document.getElementById(id);
        if (elem.checkValidity(""))
            elem.style.borderWidth = "2px",
            elem.style.borderColor = "blue";

        else
            elem.style.borderColor = "Red";
    }
</script>

















