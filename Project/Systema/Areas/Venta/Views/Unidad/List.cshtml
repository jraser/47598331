

<h1>UNIDAD DE MEDIDA</h1>

<div class="page-bar blue-dark">


    <a ng-click="Create()" class="btn default">
        Nuevo 
    </a>
    <a ng-click="Edit()" class="btn default">
        Modificar
    </a>
    <a ng-click="Delete()" class="btn default">
        Desactivar
    </a>
</div>






<div class="row">
    <div class="col-md-12">
        <div class="portlet box blue-dark ">

            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-gift"></i>BUSQUEDA UNIDAD DE MEDIDA
                </div>
                <div class="tools">
                    <a href="" class="collapse">
                    </a>

                    <a href="" class="reload">
                    </a>

                </div>
            </div>
           
            <div class="portlet-body" id="blockui_List_portlet_body">
                <div class="table-responsive">


                    <div class="col-md-13 portlet-body  ">


                        <form role="form" class="form-inline" name="FormGrupoList">

                            <div class="form-group">

                                <label class="control-label">Unidad Base</label>

                                <p class="input-group">
                                    <select ng-model="parameters.Nombre " class="form-control" ng-click="List()"
                                            data-ng-options="a.Nombre as a.Nombre for a in dll_UnidadList"></select>

                                </p>


                                <label class="control-label">Unidad Presentación</label>
                                <input type="text" class="form-control input-medium" placeholder="Consulte Unidad P" ng-click="List()"
                                       ng-model="parameters.UnidadPresentacion">


        
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn blue-dark" ng-click="List()">Buscar</button>
                            </div>
                        </form>
                    </div>
                    <div>
                        <div class="row">
                        </div>
                    </div>
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>
                                    Codigo
                                </th>
                                <th>
                                    Unidad Base
                                </th>
                                <th>
                                    Unidad Presentación
                                </th>
                                <th>
                                    Cantidad
                                </th>
                                <th></th>

                            </tr>
                        </thead>
                        <tbody>

                            <tr ng-repeat="item in UMList">
                                <td> {{item.ID_UnidadMedida}} </td>
                                <td>{{item.Nombre}}</td>
                                <td>{{item.UnidadPresentacion}}</td>
                                <td>{{item.Cantidad}}</td>                      
                                <td align="center">
                                    <input type="checkbox"
                                           ng-click="select(item.ID_UnidadMedida)">
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>











