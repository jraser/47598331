

<h1>PRODUCTOS</h1>

<div class="page-bar blue-dark">


    <a ng-click="Create()" class="btn default">
        Nuevo 
    </a>
    <a ng-click="Edit()" class="btn default">
        Modificar
    </a>
    <a ng-click="Delete()" class="btn default">
        Desactivar
    </a>
</div>






<div class="row">
    <div class="col-md-12">
        <div class="portlet box blue-dark ">

            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-gift"></i>Búsqueda Producto
                </div>
                <div class="tools">
                    <a href="" class="collapse">
                    </a>

                    <a href="" class="reload">
                    </a>

                </div>
            </div>
           
            <div class="portlet-body" id="blockui_List_portlet_body">
                <div class="table-responsive">


                    <div class="col-md-13 portlet-body  ">


                        <form role="form" class="form-inline" name="FormGrupoList">

                            <div class="form-group">
                                <label class="control-label">Descripción</label>
                                <input type="text" class="form-control input-medium" placeholder=""
                                       ng-model="parameters.Descripcion">


                                <label class="control-label">Categoria</label>

                                <p class="input-group">
                                    <select ng-model="parameters.ID_Categoria" class="form-control" ng-change="XSelectSubCategoria()"
                                            data-ng-options="a.ID_Categoria as a.Nombre for a in CategoriaList">
                                    </select>

                                </p>

                                <label class="control-label">Sub-Categoria</label>

                                <p class="input-group">
                                    <select ng-model="parameters.ID_SubCategoria" class="form-control"
                                            data-ng-options="a.ID_SubCategoria as a.Nombre for a in SubCategoriaList"></select>
                                 
                                </p>



                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn blue-dark" ng-click="List()">Buscar</button>
                            </div>
                        </form>
                    </div>
                    <div>
                        <div class="row">
                        </div>
                    </div>
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>
                                    Codigo
                                </th>
                                <th>
                                    Descripción
                                </th>
                                <th>
                                    Categoria
                                </th>
                                <th>
                                    Sub Categoria
                                </th>
                                @*<th>
                                    Precio
                                </th>*@
                                <th>
                                    Estado
                                </th>

                                <th>Fecha de Vencimiento</th>

                                <th></th>

                            </tr>
                        </thead>
                        <tbody>

                            <tr ng-repeat="item in ProductoList" >
                                <td> {{item.Codigo_Producto}} </td>
                                <td>{{item.Descripcion_Producto}}</td>
                                <td>{{item.Categoria}}</td>
                                <td>{{item.SubCategoria}}</td>
                                @*<td>{{item.CostoProducto}}</td>*@
                                <td>{{item.NombreEstado}}</td>
                                <td>{{item.Fecha_venci}}</td>
                                <td align="center">
                                    <input type="checkbox"
                                           ng-click="select(item.ID_Producto)">
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>











